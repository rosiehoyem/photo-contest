<h1>Photo Tournament!</h1>
<% i = 1%>
<% @contests.each do |contest| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Tournament #<%= i %>: <%= link_to contest.name.gsub(".", " "), contest_path(contest) %></h3>
    </div>
    <div class="panel-body">
      <p>Status: Current on round <%= contest.active_round %></p>
      <%= link_to contest_path(contest), class: "btn btn-primary" do %>
      <strong>Continue the Tournament!</strong>
      <% end %>
    </div>
  </div>
  <% i = i + 1 %>
<% end %>

<br>

<%= link_to 'New Tournament', new_contest_path %>
